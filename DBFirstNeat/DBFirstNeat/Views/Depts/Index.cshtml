@model IEnumerable<DBFirstNeat.Models.Dept>

@{
    ViewData["Title"] = "Index";
}

<h1>Department</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeptNo" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeptNo" class="btn btn-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeptNo" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
